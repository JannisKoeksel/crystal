    "node": ">=22",
    "yarn": ">=1.3.2"
  },
  "packageManager": "yarn@4.9.1",
  "resolutions": {
    "graphql": "16.1.0-experimental-stream-defer.6"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4"
  }
}
